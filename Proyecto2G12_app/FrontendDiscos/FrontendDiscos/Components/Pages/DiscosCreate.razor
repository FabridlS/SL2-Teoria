@page "/discos/nuevo"
@using proyecto2G12_app.Models
@rendermode InteractiveServer
@inject HttpClient Http
@inject NavigationManager Navigation

<h3>Crear Nuevo Disco</h3>

@* --- 1. Cartel de Error --- *@
@if (!string.IsNullOrEmpty(mensajeError))
{
    <div class="alert alert-danger">
        @mensajeError
    </div>
}

<div class="row">
    <div class="col-md-6">
        <EditForm Model="@nuevoDisco" OnValidSubmit="GuardarDisco">
            
            <div class="mb-3">
                <label class="form-label">Titulo</label>
                <InputText class="form-control" @bind-Value="nuevoDisco.Titulo" />
            </div>

            <div class="mb-3">
                <label class="form-label">Anio de lanzamiento</label>
                <InputNumber class="form-control" @bind-Value="nuevoDisco.AnioLanzamiento" />
            </div>

            <div class="mb-3">
                <label class="form-label">Tipo de disco</label>
                <InputText class="form-control" @bind-Value="nuevoDisco.TipoDisco" />
            </div>

            <div class = "mb-3">
                <label class="form-label">Artista ID (Vinculación)</label>
                <InputNumber class="form-control" @bind-Value="nuevoDisco.ArtistaId" />
            </div>
            
            <button type="submit" class="btn btn-success">Guardar</button>
            <a href="/discos" class="btn btn-secondary">Cancelar</a>
        </EditForm>
    </div>
</div>

@code {
    private Disco nuevoDisco = new Disco();
    private string? mensajeError; // <--- Variable para el error

    private async Task GuardarDisco()
    {
        try
        {
            var respuesta = await Http.PostAsJsonAsync("/discos", nuevoDisco);

            if (respuesta.IsSuccessStatusCode)
            {
                Navigation.NavigateTo("/discos");
            }
            else
            {
                // Leemos el error que devuelve la API
                var contenidoError = await respuesta.Content.ReadAsStringAsync();
                mensajeError = $"Error al guardar: {respuesta.StatusCode} - {contenidoError}";
            }
        }
        catch (Exception ex)
        {
            mensajeError = $"Error de conexión: {ex.Message}";
        }
    }
}