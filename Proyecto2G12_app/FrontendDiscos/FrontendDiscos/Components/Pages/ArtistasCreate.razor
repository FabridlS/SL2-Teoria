@page "/artistas/nuevo"
@using proyecto2G12_app.Models
@rendermode InteractiveServer
@inject HttpClient Http
@inject NavigationManager Navigation

<h3>Crear Nuevo Artista</h3>

@* --- Cartel de Error --- *@
@if (!string.IsNullOrEmpty(mensajeError))
{
    <div class="alert alert-danger">
        @mensajeError
    </div>
}

<div class="row">
    <div class="col-md-6">
        <EditForm Model="@nuevoArtista" OnValidSubmit="GuardarArtista">
            
            <div class="mb-3">
                <label class="form-label">Nombre</label>
                <InputText class="form-control" @bind-Value="nuevoArtista.Nombre" />
            </div>

            <div class="mb-3">
                <label class="form-label">Nombre Artístico</label>
                @* ¡IMPORTANTE! Usar InputNumber porque es int *@
                <InputNumber class="form-control" @bind-Value="nuevoArtista.NombreArtistico" />
            </div>

            <div class="mb-3">
                <label class="form-label">Nacionalidad</label>
                @* Corregí el nombre de la propiedad si en tu modelo pusiste 'Nacionaldiad' con el typo *@
                <InputText class="form-control" @bind-Value="nuevoArtista.Nacionalidad" />
            </div>

            <div class="mb-3">
                <label class="form-label">Discográfica</label>
                <InputText class="form-control" @bind-Value="nuevoArtista.Discografica" />
            </div>

            <button type="submit" class="btn btn-success">Guardar</button>
            <a href="/artistas" class="btn btn-secondary">Cancelar</a>
        </EditForm>
    </div>
</div>

@code {
    private Artista nuevoArtista = new Artista();
    private string? mensajeError;

    private async Task GuardarArtista()
    {
        try 
        {
            var respuesta = await Http.PostAsJsonAsync("/artistas", nuevoArtista);

            if (respuesta.IsSuccessStatusCode)
            {
                Navigation.NavigateTo("/artistas");
            }
            else
            {
                var contenidoError = await respuesta.Content.ReadAsStringAsync();
                mensajeError = $"Error al guardar: {respuesta.StatusCode} - {contenidoError}";
            }
        }
        catch (Exception ex)
        {
            mensajeError = $"Error crítico: {ex.Message}";
        }
    }
}