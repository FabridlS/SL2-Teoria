@page "/artistas"
@using proyecto2G12_app.Models
@inject HttpClient Http
@rendermode InteractiveServer
@inject NavigationManager Navigation
@inject IJSRuntime JS

<h3>Mis Artistas</h3>

@* 1. Bloque para mostrar errores si algo falla *@
@if (!string.IsNullOrEmpty(mensajeError))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Error:</strong> @mensajeError
        <button type="button" class="btn-close" @onclick="() => mensajeError = null"></button>
    </div>
}

<div class="mb-3">
    <a href="/artistas/nuevo" class="btn btn-primary">
        + Nuevo Artista
    </a>
</div>

@if (artistas == null)
{
    @if (mensajeError == null) // Solo mostramos "Cargando" si no hay error
    {
        <p><em>Cargando...</em></p>
    }
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Discográfica</th>
                <th>Nacionalidad</th>
                <th>Nombre Artístico</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var artista in artistas)
            {
                <tr>
                    <td>@artista.Nombre</td>
                    <td>@artista.Discografica</td>
                    <td>@artista.Nacionalidad</td> 
                    <td>@artista.NombreArtistico</td>
                    <td>
                        <button class="btn btn-warning btn-sm me-2" @onclick="() => Editar(artista.Id)">
                            Editar
                        </button>
                        <button class="btn btn-danger btn-sm" @onclick="() => Eliminar(artista)">
                            Eliminar
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private Artista[]? artistas;
    private string? mensajeError; // <--- 2. Variable para guardar el error

    protected override async Task OnInitializedAsync()
    {
        try 
        {
            mensajeError = null; // Limpiamos errores previos
            artistas = await Http.GetFromJsonAsync<Artista[]>("/artistas");
        }
        catch (Exception ex) 
        { 
            // 3. EN LUGAR DE JS.ALERT, guardamos el mensaje en la variable
            mensajeError = $"No se pudieron cargar los artistas. ({ex.Message})";
            
            // Opcional: Imprimir en consola del servidor para debug
            Console.WriteLine(ex); 
        }
    }

    private void Editar(int id)
    {
        Navigation.NavigateTo($"/artistas/editar/{id}");
    }
    
    private async Task Eliminar(Artista artista)
    {
        // Esto SI funciona porque ocurre al hacer click (ya no es prerender)
        bool confirmado = await JS.InvokeAsync<bool>("confirm", $"¿Seguro que querés borrar a {artista.Nombre}?");
        
        if (confirmado)
        {
            try
            {
                await Http.DeleteAsync($"/artistas/{artista.Id}");
                await OnInitializedAsync(); 
            }
            catch(Exception ex)
            {
                // Si falla el borrado, también lo mostramos en el cartel rojo
                mensajeError = $"Error al eliminar: {ex.Message}";
            }
        }
    }
}