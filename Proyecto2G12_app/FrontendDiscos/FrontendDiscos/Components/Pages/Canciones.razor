@page "/canciones"
@using proyecto2G12_app.Models
@inject HttpClient Http
@rendermode InteractiveServer
@inject IJSRuntime JS
@inject NavigationManager Navigation

<h3>Mis Canciones</h3>

@* 1. Bloque para mostrar errores si algo falla *@
@if (!string.IsNullOrEmpty(mensajeError))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Error:</strong> @mensajeError
        <button type="button" class="btn-close" @onclick="() => mensajeError = null"></button>
    </div>
}

<div class="mb-3">
    <a href="/canciones/nuevo" class="btn btn-primary">
        + Nueva Canción
    </a>
</div>

@if (canciones == null)
{
    @if (mensajeError == null) // Solo mostramos "Cargando" si no hay error
    {
        <p><em>Cargando...</em></p>
    }
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Título</th>
                <th>Duración</th>
                <th>Género</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cancion in canciones)
            {
                <tr>
                    <td>@cancion.Titulo</td>
                    <td>@cancion.Duracion</td>
                    <td>@cancion.Genero</td>
                    <td>
                        @* Botón Editar (Navega a otra página) *@
                        <button class="btn btn-warning btn-sm me-2" 
                                @onclick="() => Editar(cancion.Id)">
                            Editar
                        </button>

                        @* Botón Eliminar (Ejecuta la acción directa) *@
                        <button class="btn btn-danger btn-sm" 
                                @onclick="() => Eliminar(cancion)">
                            Eliminar
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private Cancion[]? canciones;
    private string? mensajeError;

    protected override async Task OnInitializedAsync()
    {
        try {
            mensajeError = null;
            canciones = await Http.GetFromJsonAsync<Cancion[]>("/canciones");
        }
        catch (Exception ex) { mensajeError = $"No se pudieron cargar las canciones. ({ex.Message})";}
    }

     // Navegar a la página de edición
    private void Editar(int id)
    {
        Navigation.NavigateTo($"/canciones/editar/{id}");
    }
    
    // Lógica para borrar
    private async Task Eliminar(Cancion cancion)
    {
        // Confirmación simple con Javascript
        bool confirmado = await JS.InvokeAsync<bool>("confirm", $"¿Seguro que querés borrar a {cancion.Titulo}?");
        
        if (confirmado)
        {
            try{
                await Http.DeleteAsync($"/canciones/{cancion.Id}");
                await OnInitializedAsync(); // Recargamos la lista para ver el cambio
            }catch(Exception ex){
                mensajeError = $"No se pudo eliminar la canción. ({ex.Message})";
            }
            
        }
    }
}